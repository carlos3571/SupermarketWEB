@page
@model SupermarketWEB.Pages.Providers.IndexModel
@{
    ViewData["Title"] = "Index providers";
}
<h1>Index Categories</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Providers[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Providers[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Providers[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Providers[0].Email)
            </th>

            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Providers)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>

                <td>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                </td>

                <td>
                    <span></span>
                </td>
            </tr>
        }
    </tbody>
</table>
